{
    "name": "messenger-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/gateaway/main",
        "start:prod:auth": "node dist/apps/auth/main",
        "start:prod:user": "node dist/apps/user/main",
        "start:prod:all": "concurrently \"npm run start\" \"npm run start:prod:auth\" \"npm run start:prod:user\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/gateaway/test/jest-e2e.json",
        "start:auth": "nest start auth",
        "start:user": "nest start user",
        "docker:up": "docker-compose -f ./docker/postgres/docker-compose.yml up -d",
        "docker:down": "docker-compose -f ./docker/postgres/docker-compose.yml down",
        "start:all": "concurrently \"npm run start\" \"npm run start:auth\" \"npm run start:user\"",
        "migrate:generate": "npx prisma migrate dev --schema libs/providers/src/prisma/schema.prisma --name ",
        "db:push": "npx prisma db push --schema libs/providers/src/prisma/schema.prisma",
        "db:pull": "npx prisma db pull --schema libs/providers/src/prisma/schema.prisma"
    },
    "dependencies": {
        "@faker-js/faker": "^7.6.0",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^10.0.3",
        "@nestjs/microservices": "^9.4.0",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/swagger": "^6.3.0",
        "@nestjs/typeorm": "^9.0.1",
        "@prisma/client": "^4.13.0",
        "@webmogilevtsev/messenger-api-dto": "^1.0.4",
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "date-fns": "^2.30.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.10.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0",
        "typeorm": "^0.3.15"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.13",
        "@types/jest": "29.5.0",
        "@types/node": "18.15.11",
        "@types/passport-jwt": "^3.0.8",
        "@types/passport-local": "^1.0.35",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "concurrently": "^8.0.1",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "29.5.0",
        "prettier": "^2.3.2",
        "prisma": "^4.13.0",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "29.0.5",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.2.0",
        "typescript": "^4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@shared/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
            "^@providers/providers(|/.*)$": "<rootDir>/libs/providers/src/$1"
        }
    }
}
